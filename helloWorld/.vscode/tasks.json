{
    "version": "2.0.0",
    "windows": {
        "options": {
            "shell": {
                "executable": "bash.exe",
                "args": [
                    "-c"
                ]
            }
        }
    },
    "tasks": [
        {
            "label": "Build on WSL",
            "type": "shell",
            "command": "g++",
            "args": [
                "-g",
                "-o",
                "main.out",
                "main.cpp",
                "externalFunction/circle.cpp"
            ]
        },
        {
            "label": "Run",
            "type": "shell",
            "command": "./main.out",
            "dependsOn": [
                "Build on WSL"
            ],
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "problemMatcher": [
                "$gcc"
            ]
        }
    ]
}